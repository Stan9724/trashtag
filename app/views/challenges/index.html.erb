<div class="container">

  <h1 class="text-center">List of challenges</h1>

  <ul>
    <% @challenges.each do |challenge| %>
      <li><%= link_to challenge.title, challenge_path(challenge) %></li>
       <div class="card">
        <%= cl_image_tag challenge.photo, height: 300, width: 400, crop: :fill %>
        <div class="container">
          <h4><b>John Doe</b></h4>
          <p>Architect & Engineer</p>
        </div>
      </div>
    <% end %>
  </ul>
</div>
