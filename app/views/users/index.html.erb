<div class="challenges">
  <h4 class="text-center">Top Challengers</h4>
</div>
<div class="card-users-top">
  <% @users.first(3).each do |user| %>
    <div class="card-user">
      <div class="card-user-infos">
      <%= cl_image_tag user.photo, class:"mx-auto d-block"%>
        <h1><%= user.first_name %></h1>
        <p>user score</p>
        <div class="items text-center"><i class="far fa-star" ></i><i class="far fa-star"></i><i class="far fa-star"></i>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="challenges">
<h4 class="text-center"> Challengers </h2>
</div>
<div class="cards-users-list">
    <% @users.each do |user| %>
      <div class="card-users">
        <%= cl_image_tag user.photo %>
        <div class="card-user-infos">
          <h2><%= user.first_name %></h2>
        </div>
        <div class="user_score">user score</div>
      </div>
    <% end %>
</div>

