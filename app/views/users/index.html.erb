<div class="challenges">
  <h4 class="text-center">Top Challengers</h4>
</div>

 <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
<!-- selectionner user by score
afficher les 3 Highests scores
user_score.sort
@user.first(3) -->
    <% @top_users.each_with_index do |user, index| %>
      <div class="carousel-item <%= index == 0 ? 'active' : '' %>">
        <div class="card-user">
          <div class="card-user-infos">
            <div class="text-center">
             <%= cl_image_tag user.photo, class:"d-block"%>
            </div>
            <h1><%= user.first_name %></h1>
            <p><%= user.score %> pts</p>
            <div class="items text-center">
              <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div class="challenges">
  <h4 class="text-center"> Challengers </h2>
</div>
<div class="cards-users-list">
    <% @last_users.each_with_index do |user, index| %>
      <%= link_to user_path(user) do %>
        <div class="card-users">
          <%= cl_image_tag user.photo %>
          <div class="card-user-infos">
            <h2><%= user.first_name %></h2>
          </div>
          <div class="user_score"><%= user.score %> pts</div>
        </div>
      <% end %>
    <% end %>
</div>


