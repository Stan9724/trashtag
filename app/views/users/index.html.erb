<h1 style="text-align: center;">Top Challengers</h1>

<div class="card-users-top">
  <% @users.each do |user| %>
    <div class="card-user">
      <div class="card-user-infos">
      <%= cl_image_tag user.photo, crop: :fill %>
        <h1><%= user.first_name %></h1>
        <p>user score</p>
        <div class="items" style="text-align: center;"><i class="far fa-star" ></i><i class="far fa-star"></i><i class="far fa-star"></i>
        </div>
      </div>
    </div>
  <% end %>
</div>

<h2 style="text-align: center;"> Challengers </h2>
<div class="cards-users-list">
    <% @users.each do |user| %>
      <div class="card-users">
        <%= cl_image_tag user.photo, crop: :fill %>
        <div class="card-user-infos">
          <h2><%= user.first_name %></h2>
          <p>user score</p>
        </div>
      </div>
    <% end %>
</div>

